{
  "name": "design-system-monorepo",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/docs"
  ],
  "preconstruct": {
    "packages": [
      "packages/tokens"
    ]
  },
  "scripts": {
    "dev": "pnpm -r --parallel run dev",
    "lint": "eslint .",
    "build": "pnpm build:tokens && pnpm run build-packages && pnpm run build-docs",
    "build-packages": "pnpm -r --filter './packages/*' build",
    "build-docs": "pnpm --filter './apps/docs' build",
    "generate:tokens": "pnpm --filter @bleh-ui/tokens run build",
    "build:tokens": "pnpm --filter @bleh-ui/tokens run build && preconstruct build",
    "component:new": "pnpm hygen component new"
  },
  "packageManager": "pnpm@9.12.3+sha512.cce0f9de9c5a7c95bef944169cc5dfe8741abfb145078c0d508b868056848a87c81e626246cb60967cbd7fd29a6c062ef73ff840d96b3c86c40ac92cf4a813ee",
  "devDependencies": {
    "@babel/core": "catalog:tooling",
    "@eslint/js": "catalog:tooling",
    "eslint": "catalog:tooling",
    "globals": "catalog:tooling",
    "tsx": "catalog:tooling",
    "typescript-eslint": "catalog:tooling",
    "@babel/preset-env": "^7.26.7",
    "@babel/preset-react": "^7.26.3",
    "@commercetools-uikit/i18n": "^19.22.1",
    "@chakra-ui/react": "^3.2.3",
    "@preconstruct/cli": "catalog:tooling",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "15.0.6",
    "babel-jest": "^29.7.0",
    "history": "^5.3.0",
    "hygen": "catalog:tooling",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "jest-puppeteer": "8.0.6",
    "jest-runner-eslint": "1.2.0",
    "jest-runner-stylelint": "2.3.7",
    "jest-silent-reporter": "0.6.0",
    "jest-validate": "29.7.0",
    "jest-watch-typeahead": "2.2.2",
    "react-intl": "^7.1.5",
    "react-router-dom": "^7.1.3",
    "ts-jest": "^29.2.5",
    "typescript": "catalog:tooling"
  }
}
