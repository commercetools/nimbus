{
  "name": "my-monorepo",
  "private": true,
  "workspaces": [
    "packages/bleh-ui",
    "packages/bleh-ui-icons",
    "apps/docs"
  ],
  "scripts": {
    "dev": "NO_COLOR=1 bun --filter '*' dev",
    "build": "NO_COLOR=1 bun run build-packages && bun run build-docs",
    "build-packages": "NO_COLOR=1 bun --filter './packages/*' build",
    "build-docs": "NO_COLOR=1 bun --filter './apps/docs' build"
  }
}
