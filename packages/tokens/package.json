{
  "name": "@commercetools/nimbus-tokens",
  "version": "2.0.0",
  "main": "dist/commercetools-nimbus-tokens.cjs.js",
  "module": "dist/commercetools-nimbus-tokens.esm.js",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/commercetools-nimbus-tokens.esm.js",
      "require": "./dist/commercetools-nimbus-tokens.cjs.js"
    }
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/commercetools/nimbus.git"
  },
  "scripts": {
    "build": "style-dictionary build --verbose --config ./src/style-dictionary.config.js",
    "typecheck": "tsc --noEmit"
  },
  "sideEffects": ["*.css"],
  "preconstruct": {
    "entrypoints": [
      "./index.ts",
      "./generated/ts/index.ts",
      "./generated/chakra/index.ts"
    ]
  },
  "files": ["dist", "css", "generated/ts", "generated/chakra"],
  "devDependencies": {
    "@babel/preset-typescript": "catalog:tooling",
    "@tokens-studio/sd-transforms": "^2.0.1",
    "is-plain-obj": "^4.1.0",
    "prettier": "catalog:tooling",
    "style-dictionary": "^4.3.0"
  }
}
